<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %> errors prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
  
        <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :Image %>
            <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :Introduction %>
            <%= f.text_area :introduction, id:"inputIntroduction", placeholder: "Introduction", class:"form-control" %>
          </div>
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>
